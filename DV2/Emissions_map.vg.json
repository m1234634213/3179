{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Flat world map with oceans and countries colored by aviation CO₂ emissions (latest year, log scale, reversed magma)",
  "width": 900,
  "height": 500,
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "transform": [
        {
          "lookup": "id",
          "from": {
            "data": {"url": "emissions.csv"},
            "key": "numeric",
            "fields": ["Total","Entity","Year"]
          }
        },
        {
          "filter": "datum.properties.NAME != 'Antarctica' && datum.Year == 2019"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "#555"},
      "encoding": {
        "color": {
          "field": "Total",
          "type": "quantitative",
          "title": "CO₂ Emissions",
          "scale": {"type": "log", "scheme": "magma", "reverse": true, "nice": true}
        },
        "tooltip": [
          {"field": "Entity", "type": "nominal"},
          {"field": "Total", "type": "quantitative", "format": ","},
          {"field": "Year", "type": "quantitative"}
        ]
      }
    }
  ]
}
