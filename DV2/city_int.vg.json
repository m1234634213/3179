{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Top 15 airlines horizontal bar chart with line marker",
  "data": {
    "url": "city_int_airline.csv",
    "format": {
      "type": "csv",
      "parse": {
        "Year": "number",
        "Total Flights": "number"
      }
    }
  },
  "params": [
    {
      "name": "selectedYear",
      "value": 2010
    }
  ],
  "transform": [
    {"filter": "datum.Year === selectedYear"},
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "Total Flights", "order": "descending"}]
    },
    {"filter": "datum.rank <= 15"}
  ],
  "layer": [
    {
      "mark": {"type": "bar", "size": 10},
      "encoding": {
        "x": {"field": "Total Flights", "type": "quantitative"},
        "y": {"field": "Airline", "type": "nominal", "sort": "-x"},
        "color": {"field": "Airline", "type": "nominal"}
      }
    },
    {
      "mark": {"type": "line", "interpolate": "monotone", "color": "black", "strokeWidth": 2},
      "encoding": {
        "x": {"field": "Total Flights", "type": "quantitative"},
        "y": {"field": "Airline", "type": "nominal", "sort": "-x"}
      }
    },
    {
      "mark": {"type": "text", "align": "left", "dx": 5},
      "encoding": {
        "x": {"field": "Total Flights", "type": "quantitative"},
        "y": {"field": "Airline", "type": "nominal"},
        "text": {"field": "Total Flights", "type": "quantitative"}
      }
    }
  ]
}
