{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Top 15 airlines horizontal bar chart with flights summed per airline, dynamic per selected year",
  "width": 900,
  "height": 500,
  "data": {
    "url": "city_int_airline.csv",
    "format": {
      "type": "csv",
      "parse": {
        "Year": "number",
        "Total Flights": "number"
      }
    }
  },
  "params": [
    {
      "name": "selectedYear",
      "value": 2010
    }
  ],
  "transform": [
    {"filter": "datum.Year === selectedYear"},
    {
      "aggregate": [
        {"op": "sum", "field": "Total Flights", "as": "TotalFlightsSum"}
      ],
      "groupby": ["Airline"]
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "TotalFlightsSum", "order": "descending"}]
    },
    {"filter": "datum.rank <= 15"}
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "TotalFlightsSum",
      "type": "quantitative",
      "axis": {"title": "Total Flights"}
    },
    "y": {
      "field": "Airline",
      "type": "nominal",
      "sort": "-x",
      "axis": {"title": "Airline"}
    },
    "color": {
      "field": "Airline",
      "type": "nominal",
      "legend": null
    },
    "tooltip": [
      {"field": "Airline", "type": "nominal"},
      {"field": "TotalFlightsSum", "type": "quantitative"}
    ]
  }
}
