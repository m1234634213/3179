{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Top 15 domestic airlines cumulative flights up to yearSignal",
  "width": 900,
  "height": 500,
  "params": [
  {
    "name": "yearSignal",
    "value": 2010,
    "bind": {
        "input": "select",
        "options": [2010,2011,2012,2013,2014,2015,2016,2017,2018,2019,2020,2021,2022,2023,2024,2025],
        "name": "Max Year: "
      }
  }
],
"data": {
    "url": "domestic_airlines_flights.csv",
    "format": {
      "type": "csv",
      "parse": {
        "Year": "number",
        "Total Flights": "number"
      }
    }
  },

  "transform": [
    {"filter": "datum.Airline != 'All Airlines'"},
    {
      "aggregate": [
        {"op": "sum", "field": "Total Flights", "as": "TotalFlightsSum"}
      ],
      "groupby": ["Airline", "Year"]
    },
    {
      "window": [
        {"op": "sum", "field": "TotalFlightsSum", "as": "CumulativeFlights"}
      ],
      "groupby": ["Airline"],
      "sort": [{"field": "Year", "order": "ascending"}]
    },
    {
      "filter": "datum.Year <= max(yearSignal,2010)"
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "CumulativeFlights", "order": "descending"}]
    },
    {"filter": "datum.rank <= 15"}
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "axis": {"title": "Year"}
    },
    "y": {
      "field": "Airline",
      "type": "nominal",
      "axis": {"title": "Airline"}
    },
    "color": {
      "field": "Airline",
      "type": "nominal",
      "legend": null
    },
    "tooltip": [
      {"field": "Airline", "type": "nominal"},
      {"field": "CumulativeFlights", "type": "quantitative"},
      {"field": "Year", "type": "ordinal"}
    ]
  }
}
