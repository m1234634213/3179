{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Cumulative airline flight heat map (cumulative up to selectedYear).",
  "width": 900,
  "height": 500,
  "data": {
    "url": "domestic_airlines_flights.csv",
    "format": {
      "type": "csv",
      "parse": {
        "Year": "number"
      }
    }
  },
  "params": [
    {
      "name": "selectedYear",
      "value": 2010,
      "bind": null
    }
  ],
  "transform": [
    { "filter": "datum.Airline != 'All Airlines'" },

   
    {
      "aggregate": [
        { "op": "count", "as": "Flights" }
      ],
      "groupby": ["Airline", "Year"]
    },

   
    {
      "filter": "datum.Year <= selectedYear"
    },

   
    {
      "window": [
        { "op": "sum", "field": "Flights", "as": "CumulativeFlights" }
      ],
      "groupby": ["Airline"],
      "sort": [{ "field": "Year", "order": "ascending" }]
    }
  ],
  "mark": "rect",
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "axis": { "title": "Year" }
    },
    "y": {
      "field": "Airline",
      "type": "nominal",
      "axis": { "title": "Airline" }
    },
    "color": {
      "field": "CumulativeFlights",
      "type": "quantitative",
      "scale": { "scheme": "purplered" },
      "legend": { "title": "Cumulative Flights" }
    },
    "tooltip": [
      { "field": "Airline", "type": "nominal" },
      { "field": "Year", "type": "ordinal" },
      { "field": "CumulativeFlights", "type": "quantitative" }
    ]
  }
}
