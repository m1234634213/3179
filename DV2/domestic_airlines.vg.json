{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Cumulative airline flight heat map, showing at least 2010 if slider is lower",
  "width": 900,
  "height": 500,
  "data": {
    "url": "domestic_airlines_flights.csv"
  },
  "params": [
    {
      "name": "selectedYear",
      "value": 2010,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2025,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Airline != 'All Airlines'"
    },
    {
      "aggregate": [
        {"op": "count", "as": "Flights"}
      ],
      "groupby": ["Airline", "Year"]
    },
    {
      "window": [
        {"op": "sum", "field": "Flights", "as": "CumulativeFlights"}
      ],
      "groupby": ["Airline"],
      "sort": [{"field": "Year", "order": "ascending"}]
    },
    {
      "filter": "datum.Year <= max(2010, selectedYear)"
    }
  ],
  "mark": "rect",
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "axis": {"title": "Year"}
    },
    "y": {
      "field": "Airline",
      "type": "nominal",
      "axis": {"title": "Airline"}
    },
    "color": {
      "field": "CumulativeFlights",
      "type": "quantitative",
      "scale": {"scheme": "purplered"},
      "legend": {"title": "Cumulative Flights"}
    },
    "tooltip": [
      {"field": "Airline", "type": "nominal"},
      {"field": "Year", "type": "ordinal"},
      {"field": "CumulativeFlights", "type": "quantitative"}
    ]
  }
}
