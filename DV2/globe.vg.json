{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Flat map showing all Australian outbound flights with straight lines",
  "width": 1000,
  "height": 600,

  "data": {
    "url": "citypairs.csv"
  },

  "params": [
    {
      "name": "selectedYear",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2025,
        "step": 1,
        "name": "Year: "
      }
    }
  ],

  "projection": {
    "type": "naturalEarth1",
    "scale": 200,
    "center": [135, -25]   
  },

  "transform": [
    {
      "filter": "datum.Year == selectedYear && datum['Lat  Aus'] != null && datum['Lat International'] != null"
    }
  ],

  "layer": [
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "mark": {"type": "geoshape", "fill": "#e0f7fa", "stroke": "#aaa"}
    },
    {
      "transform": [
        {
          "fold": ["Lon Aus", "Lon International"],
          "as": ["step", "longitude"]
        },
        {
          "calculate": "datum.step == 'Lon Aus' ? datum['Lat  Aus'] : datum['Lat International']",
          "as": "latitude"
        }
      ],
      "mark": {"type": "line", "interpolate": "linear", "strokeOpacity": 0.8},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {"field": "OutSeatsMax", "type": "quantitative", "scale": {"range": [0.5, 5]}},
        "color": {"field": "OutSeatsMax", "type": "quantitative", "scale": {"scheme": "orangered"}},
        "tooltip": [
          {"field": "Australian", "type": "nominal", "title": "From"},
          {"field": "International", "type": "nominal", "title": "To"},
          {"field": "OutSeatsMax", "type": "quantitative", "title": "Passengers"}
        ]
      }
    },
    {
      "mark": {"type": "point", "filled": true, "shape": "triangle", "size": 60, "color": "#ff9a00"},
      "encoding": {
        "longitude": {"field": "Lon International", "type": "quantitative"},
        "latitude": {"field": "Lat International", "type": "quantitative"}
      }
    }
  ]
}
