{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Australian outbound international flights",
  "width": 800,
  "height": 500,
  "projection": {
    "type": "mercator",
    "center": [135, -25],
    "scale": 200
  },
  "params": [
    {
      "name": "selectedYear",
      "value": 2003,
      "bind": {
        "input": "range",
        "min": 2003,
        "max": 2023,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "lightblue", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "mark": {"type": "geoshape", "fill": "#f2f2f2", "stroke": "#999"}
    },
    {
      "data": {"url": "citypairs.csv"},
      "transform": [{"filter": "datum.Year == selectedYear"}],
      "mark": {"type": "line", "tooltip": true, "interpolate": "linear"},
      "encoding": {
        "longitude": {"field": "Lon Aus", "type": "quantitative"},
        "latitude": {"field": "Lat Aus", "type": "quantitative"},
        "longitude2": {"field": "Lon International"},
        "latitude2": {"field": "Lat International"},
        "size": {"field": "OutFlightsAll", "type": "quantitative"},
        "color": {"value": "orange"},
        "tooltip": [
          {"field": "Australian", "type": "nominal"},
          {"field": "International", "type": "nominal"},
          {"field": "OutFlightsAll", "type": "quantitative"},
          {"field": "OutSeatsMax", "type": "quantitative"}
        ]
      }
    },
    {
      "data": {"url": "citypairs.csv"},
      "transform": [{"filter": "datum.Year == selectedYear"}],
      "mark": {"type": "circle", "tooltip": true, "color": "red"},
      "encoding": {
        "longitude": {"field": "Lon Aus", "type": "quantitative"},
        "latitude": {"field": "Lat Aus", "type": "quantitative"},
        "size": {"field": "OutFlightsAll", "type": "quantitative"},
        "tooltip": [
          {"field": "Australian", "type": "nominal"},
          {"field": "OutFlightsAll", "type": "quantitative"}
        ]
      }
    }
  ]
}
