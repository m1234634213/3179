{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Capital City Airports with Traffic Categories",
  "width": 800,
  "height": 800,
  "params": [
    {
      "name": "rotate0",
      "value": 0
    }
  ],
  "projection": {
    "type": "orthographic",
    "clipAngle": 90,
    "rotate": [
      {
        "signal": "rotate0"
      },
      0
    ]
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "ne_110m_admin_0_countries.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f0f0f0",
        "stroke": "#888"
      }
    },
    {
      "data": {
        "url": "capital_city_airports_all.csv",
        "format": {
          "type": "csv"
        }
      },
      "transform": [
        {
          "calculate": "toNumber(datum['Traffic Category']) < 30000000 ? 'Low' : toNumber(datum['Traffic Category']) <= 60000000 ? 'Medium' : 'High'",
          "as": "TrafficBucket"
        }
      ],
      "mark": {
        "type": "circle",
        "size": 80
      },
      "encoding": {
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "color": {
          "field": "TrafficBucket",
          "type": "nominal",
          "scale": {
            "domain": [
              "Low",
              "Medium",
              "High"
            ],
            "range": [
              "#66c2a5",
              "#fc8d62",
              "#e31a1c"
            ]
          },
          "legend": {
            "title": "Airport Traffic Volume"
          }
        },
        "tooltip": [
          {
            "field": "Name",
            "type": "nominal"
          },
          {
            "field": "City",
            "type": "nominal"
          },
          {
            "field": "Country",
            "type": "nominal"
          },
          {
            "field": "IATA Code",
            "type": "nominal"
          },
          {
            "field": "TrafficBucket",
            "type": "nominal"
          },
          {
            "field": "Traffic Category",
            "type": "quantitative"
          }
        ]
      }
    }
  ]
}