{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Interactive globe with Australian outbound flights as curved arcs that rotate with the globe",
  "width": 900,
  "height": 900,
  "data": {
    "url": "citypairs.csv"
  },
  "params": [
    {
      "name": "selectedYear",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2025,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "rotLon",
      "value": -135,
      "bind": false
    }
  ],
  "projection": {
    "type": "orthographic",
    "rotate": {"signal": "[rotLon,0,0]"},
    "scale": 450
  },
  "transform": [
    {
      "filter": "datum.Year == selectedYear && datum['Lat  Aus'] != null && datum['Lat International'] != null"
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "routeRank",
          "sort": [{"field": "OutSeatsMax", "order": "descending"}]
        }
      ]
    },
    { "filter": "datum.routeRank <= 30" },
    {
      "calculate": "{ \"type\": \"Feature\", \"geometry\": { \"type\": \"LineString\", \"coordinates\": (function(){ var start=[datum['Lon Aus'], datum['Lat  Aus']]; var end=[datum['Lon International'], datum['Lat International']]; var points=[]; for(var i=0;i<=20;i++){ var t=i/20; var lon=start[0]*(1-t)+end[0]*t; var lat=start[1]*(1-t)+end[1]*t + 10*Math.sin(Math.PI*t); points.push([lon,lat]); } return points; })() }, \"properties\": {\"From\": datum.Australian, \"To\": datum.International, \"OutSeatsMax\": datum.OutSeatsMax} }",
      "as": "geo"
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "mark": {"type": "geoshape", "fill": "#1b263b", "stroke": "#888"}
    },
    {
      "mark": {"type": "geoshape", "stroke": "orangered", "strokeWidth": 2},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "tooltip": [
          {"field": "From", "type": "nominal"},
          {"field": "To", "type": "nominal"},
          {"field": "OutSeatsMax", "type": "quantitative"}
        ]
      }
    },
    {
      "mark": {"type": "point", "filled": true, "shape": "triangle", "size": 50, "color": "#ff9a00"},
      "encoding": {
        "longitude": {"field": "Lon International", "type": "quantitative"},
        "latitude": {"field": "Lat International", "type": "quantitative"},
        "tooltip": [
          {"field": "Australian", "type": "nominal", "title": "From"},
          {"field": "International", "type": "nominal", "title": "To"},
          {"field": "OutSeatsMax", "type": "quantitative", "title": "Passengers"}
        ]
      }
    }
  ]
}
