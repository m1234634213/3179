{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Globe of Australian outbound flights with curved geodesic arcs following the Earth's surface.",
  "width": 800,
  "height": 800,
  "autosize": "none",
  "signals": [
    {
      "name": "selectedYear",
      "value": 2020,
      "bind": {"input": "range", "min": 2000, "max": 2025, "step": 1, "name": "Year: "}
    },
    {
      "name": "rotLon",
      "value": -135,
      "bind": {"input": "range", "min": -180, "max": 180, "step": 1, "name": "Rotate Longitude"}
    },
    {
      "name": "projection",
      "update": "projection('orthographic').rotate([rotLon,0,0]).scale(350).translate([width/2, height/2])"
    }
  ],
  "data": [
    {
      "name": "countries",
      "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
      "format": {"type": "topojson", "feature": "countries"}
    },
    {
      "name": "oceans",
      "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
      "format": {"type": "topojson", "feature": "oceans"}
    },
    {
      "name": "flights",
      "url": "citypairs.csv",
      "transform": [
        {"type": "filter", "expr": "datum.Year == selectedYear"},
        {
          "type": "window",
          "sort": {"field": "OutSeatsMax", "order": "descending"},
          "ops": ["rank"],
          "as": ["routeRank"]
        },
        {"type": "filter", "expr": "datum.routeRank <= 30"},
        {
          "type": "formula",
          "as": "route",
          "expr": "{'type':'LineString','coordinates':[[datum['Lon Aus'], datum['Lat  Aus']],[datum['Lon International'], datum['Lat International']]]}"
        }
      ]
    }
  ],
  "marks": [
    {
      "type": "shape",
      "from": {"data": "oceans"},
      "encode": {
        "update": {"fill": {"value": "skyblue"}}
      },
      "transform": [{"type": "geoshape", "projection": {"signal": "projection"}}]
    },
    {
      "type": "shape",
      "from": {"data": "countries"},
      "encode": {
        "update": {"fill": {"value": "#1b263b"}, "stroke": {"value": "#777"}, "strokeWidth": {"value": 0.5}}
      },
      "transform": [{"type": "geoshape", "projection": {"signal": "projection"}}]
    },
    {
      "type": "shape",
      "from": {"data": "flights"},
      "encode": {
        "enter": {"tooltip": {"signal": "datum.Australian + ' â†’ ' + datum.International"}},
        "update": {
          "stroke": {"scale": "color", "field": "OutSeatsMax"},
          "strokeWidth": {"scale": "size", "field": "OutSeatsMax"},
          "strokeOpacity": {"value": 0.8}
        }
      },
      "transform": [
        {"type": "geoshape", "projection": {"signal": "projection"}, "field": "route"}
      ]
    },
    {
      "type": "symbol",
      "from": {"data": "flights"},
      "encode": {
        "enter": {
          "tooltip": {"signal": "datum.International"},
          "fill": {"value": "#ff9a00"},
          "shape": {"value": "triangle"}
        },
        "update": {"size": {"value": 80}, "opacity": {"value": 0.9}}
      },
      "transform": [
        {
          "type": "geopoint",
          "projection": {"signal": "projection"},
          "fields": ["Lon International", "Lat International"]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "size",
      "type": "linear",
      "domain": {"data": "flights", "field": "OutSeatsMax"},
      "range": [1, 6]
    },
    {
      "name": "color",
      "type": "linear",
      "domain": {"data": "flights", "field": "OutSeatsMax"},
      "range": ["#ffb380", "#ff0000"]
    }
  ]
}
