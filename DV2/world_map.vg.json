{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Interactive globe + Australian outbound flights with adjustable rotation longitude, curved arcs over globe, and oceans layer",
  "width": 800,
  "height": 800,
  "data": {
    "url": "citypairs.csv"
  },
  "params": [
    {
      "name": "selectedYear",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2025,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "rotLon",
      "value": -135,
      "bind": {
        "input": "range",
        "min": -180,
        "max": 180,
        "step": 1,
        "name": "Rotate Longitude"
      }
    }
  ],
  "projection": {
    "type": "orthographic",
    "rotate": [{"signal": "rotLon"}, 0, 0],
    "scale": 450
  },
  "transform": [
    {
      "filter": "datum.Year == selectedYear && datum['Lat  Aus'] != null && datum['Lat International'] != null"
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "routeRank",
          "sort": [{"field": "OutSeatsMax", "order": "descending"}]
        }
      ]
    },
    { "filter": "datum.routeRank <= 30" },
    {
      "calculate": "datum['Lon Aus'] + 0.25 * (datum['Lon International'] - datum['Lon Aus'])",
      "as": "lon25"
    },
    {
      "calculate": "datum['Lat  Aus'] + 0.25 * (datum['Lat International'] - datum['Lat  Aus']) + 15",
      "as": "lat25"
    },
    {
      "calculate": "datum['Lon Aus'] + 0.5 * (datum['Lon International'] - datum['Lon Aus'])",
      "as": "lon50"
    },
    {
      "calculate": "datum['Lat  Aus'] + 0.5 * (datum['Lat International'] - datum['Lat  Aus']) + 30",
      "as": "lat50"
    },
    {
      "calculate": "datum['Lon Aus'] + 0.75 * (datum['Lon International'] - datum['Lon Aus'])",
      "as": "lon75"
    },
    {
      "calculate": "datum['Lat  Aus'] + 0.75 * (datum['Lat International'] - datum['Lat  Aus']) + 15",
      "as": "lat75"
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "mark": {"type": "geoshape", "fill": "#1b263b", "stroke": "#888"}
    },
    {
      "transform": [
        {
          "fold": ["Lon Aus", "lon25", "lon50", "lon75", "Lon International"],
          "as": ["step", "longitude"]
        },
        {
          "calculate": "datum.step == 'Lon Aus' ? datum['Lat  Aus'] : datum.step == 'lon25' ? datum.lat25 : datum.step == 'lon50' ? datum.lat50 : datum.step == 'lon75' ? datum.lat75 : datum['Lat International']",
          "as": "latitude"
        }
      ],
      "mark": {"type": "line", "interpolate": "monotone", "tension": 0.7},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {"field": "OutSeatsMax", "type": "quantitative", "scale": {"range": [1, 8]}},
        "color": {"field": "OutSeatsMax", "type": "quantitative", "scale": {"scheme": "orangered"}},
        "tooltip": [
          {"field": "Australian", "type": "nominal", "title": "From"},
          {"field": "International", "type": "nominal", "title": "To"},
          {"field": "OutSeatsMax", "type": "quantitative", "title": "Passengers"}
        ]
      }
    },
    {
      "mark": {"type": "point", "filled": true, "shape": "triangle", "size": 50, "color": "#ff9a00"},
      "encoding": {
        "longitude": {"field": "Lon International", "type": "quantitative"},
        "latitude": {"field": "Lat International", "type": "quantitative"},
        "tooltip": [
          {"field": "Australian", "type": "nominal", "title": "From"},
          {"field": "International", "type": "nominal", "title": "To"},
          {"field": "OutSeatsMax", "type": "quantitative", "title": "Passengers"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    }
  ]
}
